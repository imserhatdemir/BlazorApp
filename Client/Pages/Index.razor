@page "/"
@page "/search/{searchText}/{page:int}"
@page "/{categoryUrl}"
@inject IProductService ProductService

<PageTitle>Çemenardagül</PageTitle>
<HeadContent>
    <meta name="description" content="Turkiyenin elektronik magazası">
    <meta name="keywords" content="Pic microchip,Vidalı kondansator,Transistor,Entegre,Mosfet,Aliminyum direnç 25w,Aliminyum direnç 50w,Klemens,Elektronik">
</HeadContent>
@if (SearchText == null && CategoryUrl == null)
{
    <Slide/>
    <br/>
    <CategoryShow/>
    <br />
    <FeaturedProducts/>
    <Advert />
    <Company/>
    <br />
    <Brand />
}
else
{
<ProductList/>
}
@code{
    [Parameter]
    public string? CategoryUrl { get; set; } = null;
    [Parameter]
    public string? SearchText { get; set; } = null; 
    [Parameter]
    public string? SubUrl { get; set; } = null;
    [Parameter]
    public int Page { get; set; } = 1;

    protected override async Task OnParametersSetAsync()
    {
        if(SearchText != null)
        {
            await ProductService.SearchProducts(SearchText,Page);
        }
        else{
            await ProductService.GetProducts(CategoryUrl);
        }
       
    }
}
