@page "/admin/iletisime-gecenler"
@inject IContactFormService ContactService
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Admin")]


    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ad Soyad</th>
                <th scope="col">Telefon</th>
                <th scope="col">Mail</th>
                <th scope="col">Başlık</th>
                <th scope="col">Mesaj</th>
                <th scope="col">Tarih</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in ContactService.Contacts)
{
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Phone</td>
                <td>@item.Mail</td>
                <td>@item.Title</td>
                <td>@item.Message</td>
                <td>@item.ContactDate</td>
                <td>
                    <button class="btn btn-primary" @onclick="(()=>DeleteContact(item.Id))">
                    <i class="oi oi-trash"></i>
                </button></td>
            </tr>
}
           
        </tbody>
    </table>



@code {
    protected override async Task OnInitializedAsync()
    {
        await ContactService.GetContactAsync();
    }
    private async Task DeleteContact(int id)
    {
        await ContactService.DeleteContact(id);
    }
}
