@page "/admin/shipments"
@page "/admin/shipments/{int:id}"
@inject IShipmentService ShipmentService
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Admin")]

<div class="container">
    <h2>Horizontal form</h2>
    <form class="form-horizontal" action="/action_page.php">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Takip No</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="Kargo takip no" name="cargono">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Sipariş</label>
            <div class="col-sm-10">
                <select class="form-select">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Çıkış Adresi</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" placeholder="Çıkış Adresi Gir" name="sender">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Varış Adresi</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" placeholder="Varış adresi gir" name="map">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" placeholder="Enter email" name="email">
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </form>
</div>


@code {
    [Parameter]
    public int Id { get; set; }

    Shipment ship = new Shipment();
    bool loading = true;
    string btnText = "";
    string msg = "Loading..";

    protected override async Task OnInitializedAsync()
    {
        await ShipmentService.GetAdminShip();
    }


    protected override async Task OnParametersSetAsync()
    {
        if (Id == 0)
        {
            ship = new Shipment { IsNew = true };
            btnText = "CreateProduct";
        }
        else
        {
            Shipment dbProduct = (await ShipmentService.GetShipment(Id)).Data;
            if (dbProduct == null)
            {
                msg = $"product with id '{Id}' does not exist";
                return;
            }
            ship = dbProduct;
            ship.Editing = true;
            btnText = "UpdateProduct";
        }
        loading = false;
    }


    async void AddOrUpdateProduct()
    {
        if (ship.IsNew)
        {
            var result = await ShipmentService.CreateShipment(ship);
            NavigationManager.NavigateTo("admin/kargo-takip-yonetimi");
        }
        else
        {
            ship.IsNew = false;
            ship = await ShipmentService.UpdateShip(ship);
            NavigationManager.NavigateTo($"admin/shipments/{ship.Id}", true);
        }
    }

    async void DeleteProduct()
    {
